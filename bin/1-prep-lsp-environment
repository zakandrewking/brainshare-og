#!/bin/bash

cd "$(dirname "$0")"

echo "frontend"
cd ../frontend
yarn install --dev

echo "table-parser"
cd ../table-parser
pip install -r requirements.txt
pip install -r requirements.dev.txt

echo "task-worker-py"
cd ../task-worker-py
pip install -r requirements.txt
pip install -r requirements.dev.txt

echo "brain-cli"
cd ../brain-cli
pip install -e ".[dev]"